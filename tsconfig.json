        "allowJs": true,
        "outDir": "./dist/",
        "sourceMap": false,
        "noImplicitAny": false,
        "module": "es6",
        "moduleResolution": "Node",
        "target": "es5",
        "lib": [
            "es2016",
            "dom",
            "es5"
